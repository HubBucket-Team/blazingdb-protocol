namespace com.blazingdb.protocol.calcite.plan.messages;

enum RelNodeType : short {
    Root = 0,
    Project,
    Filter,
    TableScan,
    Aggregate,
    Union
}

table TableScan {
    qualifiedName: [string];
}

table LogicalProject {
    columnNames: [string];
    columnValues: [string];
}

table LogicalAggregate {
    groups: [ulong];
}

table LogicalUnion {
    all: bool = false;
}

table RelNode {
    type: RelNodeType;
    data: [byte];
    inputs: [RelNode];
}

root_type RelNode;
