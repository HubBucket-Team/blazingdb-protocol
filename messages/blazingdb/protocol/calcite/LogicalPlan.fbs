namespace com.blazingdb.protocol.calcite.plan.messages;

enum NodeType : byte {
    Root = 0,
    Project,
    Filter,
    TableScan,
    Aggregate,
    Union
}

table TableScanData {
    qualifiedName: [string];
}

table ProjectData {
    columnNames: [string];
    columnValues: [string];
}

table AggregateData {
    groups: [ulong];
}

table UnionData {
    all: bool = false;
}

table Node {
    type: NodeType;
    data: [byte];
    children: [Node];
}

root_type Node;
